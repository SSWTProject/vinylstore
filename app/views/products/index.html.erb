<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Artist</th>
      <th>Title</th>
      <th>Genre</th>
      <th>Release date</th>
      <th>Label</th>
      <th>Description</th>
      <th>Tracklist</th>
      <th>Album</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.artist %></td>
        <td><%= product.title %></td>
        <td><%= product.genre %></td>
        <td><%= product.release_date %></td>
        <td><%= product.label %></td>
        <td><%= product.description %></td>
        <td><%= product.tracklist %></td>
        <td><%= product.album %></td>
        <td><%= product.image_url %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

