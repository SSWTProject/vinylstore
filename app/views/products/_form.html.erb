    <%= form.label :title %>
    <%= form.text_field :title, id: :product_title %>
  </div>

  <div class="field">
    <%= form.label :genre %>
    <%= form.text_field :genre, id: :product_genre %>
  </div>

  <div class="field">
    <%= form.label :release_date %>
    <%= form.date_select :release_date, id: :product_release_date %>
  </div>

  <div class="field">
    <%= form.label :label %>
    <%= form.text_field :label, id: :product_label %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :product_description %>
  </div>

  <div class="field">
    <%= form.label :tracklist %>
    <%= form.text_area :tracklist, id: :product_tracklist %>
  </div>

  <div class="field">
    <%= form.label :album %>
    <%= form.check_box :album, id: :product_album %>
  </div>

  <div class="field">
    <%= form.label :image_url %>
    <%= form.text_field :image_url, id: :product_image_url %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
